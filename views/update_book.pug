extends layout

block content
  form(action="/books/" + book.id + '?_method=PUT', method="post")
    include form_error
    include form
    p
      input(type='submit' value='Update Book')
  form(method='post', action='/books/' + book.id + '/delete?_method=DELETE', onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/books') Cancel
    p
      input(type='submit' value='Delete Book')